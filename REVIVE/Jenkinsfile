        stage('Build-images-ui') {
                steps {
                    sh '''
                    cd $WORKSPACE/REVIVE/src/ui
                    docker build -t sahar5470/ui:jenkins-${BUILD_NUMBER} .
                    '''
                }
        }
        stage('Build-images-catalog') {
              steps {
                  sh '''
                    cd $WORKSPACE/REVIVE/src/catalog
                    docker build -t sahar5470/catalog:jenkins-${BUILD_NUMBER} .
                    docker build -t sahar5470/catalog-mysql:jenkins-${BUILD_NUMBER} -f Dockerfile-mysql .
                  '''
              }
        }
        stage('Build-images-cart') {
            steps {
                sh '''
                  cd $WORKSPACE/REVIVE/src/cart
                  docker build -t sahar5470/carts:jenkins-${BUILD_NUMBER} .
                  docker build -t sahar5470/carts-dynamodb:jenkins-${BUILD_NUMBER} -f Dockerfile-dynamodb .
                '''
            }
        }
        stage('Build-images-orders') {
            steps {
                sh '''
                  cd $WORKSPACE/REVIVE/src/orders
                  docker build -t sahar5470/orders:jenkins-${BUILD_NUMBER} .
                  docker build -t sahar5470/orders-mysql:jenkins-${BUILD_NUMBER} -f Dockerfile-mysql .
                  docker build -t sahar5470/orders-rabbitmq:jenkins-${BUILD_NUMBER} -f Dockerfile-rabbitmq .                  
                '''
            }
        }
        stage('Build-images-checkout') {
            steps {
                sh '''
                cd $WORKSPACE/REVIVE/src/checkout
                docker build -t sahar5470/checkout:jenkins-${BUILD_NUMBER} .
                docker build -t sahar5470/checkout-db:jenkins-${BUILD_NUMBER} -f Dockerfile-db .
                '''
            }
        }
        stage('Build-images-assets') {
            steps {
                sh '''
                  cd $WORKSPACE/REVIVE/src/assets
                  docker build -t sahar5470/asset:jenkins-${BUILD_NUMBER} .
                  '''
            }
        }  

        stage('Push-images-ui') {
                steps {
                    sh '''
                    docker push sahar5470/ui:jenkins-${BUILD_NUMBER}
                    '''
                }
        }  

        stage('Push-images-catalog') {
              steps {
                  sh '''
                    docker push sahar5470/catalog:jenkins-${BUILD_NUMBER}
                    docker push sahar5470/catalog-mysql:jenkins-${BUILD_NUMBER}
                  '''
              }
        }

        stage('Push-images-cart') {
            steps {
                sh '''
                  docker push sahar5470/carts:jenkins-${BUILD_NUMBER}
                  docker push sahar5470/carts-dynamodb:jenkins-${BUILD_NUMBER}
                '''
            }
        }

        stage('Push-images-orders') {
            steps {
                sh '''
                  docker push sahar5470/orders:jenkins-${BUILD_NUMBER}
                  docker push sahar5470/orders-mysql:jenkins-${BUILD_NUMBER}
                  docker push sahar5470/orders-rabbitmq:jenkins-${BUILD_NUMBER}             
                '''
            }
        }

        stage('Push-images-checkout') {
            steps {
                sh '''
                docker push sahar5470/checkout:jenkins-${BUILD_NUMBER}
                docker push sahar5470/checkout-db:jenkins-${BUILD_NUMBER}
                '''
            }
        }

        stage('Push-images-assets') {
            steps {
                sh '''
                docker push sahar5470/asset:jenkins-${BUILD_NUMBER}
                  '''
            }
        }
   

    stage('helm-charts') {


	      steps {
	        script {
	          withCredentials([
	            string(credentialsId: 'github_token', variable: 'TOKEN')
	          ]) {

	            sh '''
                rm -rf revive-helm-chart || true 
                git clone https://github.com/sahar-m-ali/revive-helm-charts.git
                cd revive-helm-chart
cat << EOF > dev-values.yaml
       repository:
         tag:   jenkins-$BUILD_NUMBER
         assets:
          image: sahar5470/assets
       
         carts:
          image: sahar5470/cart
       
         cart_dynamodb:
          image: sahar5470/cart-dynamodb
        
         catalog:
          image: sahar5470/catalog
       
        
         catalog_mysql:
          image: sahar5470/catalog-mysql
       
         checkout:
          image: sahar5470/checkout
       
         checkout_redis:
          image: sahar5470/checkout-redis
       
         orders:
          image: sahar5470/orders
       
         orders_mysql:
          image: sahar5470/orders-mysql
       
         orders_rabbitmq:
          image: sahar5470/orders-rabbitmq 
       
         ui:
          image: sahar5470/ui
EOF
git config --global user.name "sahar5470"
git config --global user.email "info@sahar5470.com"
   cat  dev-values.yaml
   
   git add -A 
    git commit -m "Change from JENKINS" 
    git push  https://sahar5470:$TOKEN@github.com/sahar5470/revive-helm-charts.git
	            '''
	          }

	        }

	      }

	    }

    }



    post {
        success {
            slackSend color: '#2EB67D',
            channel: 'dev-alerts', 
            message: "Revive Project Build Status" +
            "\n Project Name: Revive" +
            "\n Job Name: ${env.JOB_NAME}" +
            "\n Build number: ${currentBuild.displayName}" +
            "\n Build Status : SUCCESS" +
            "\n Build url : ${env.BUILD_URL}"
        }
        failure {
            slackSend color: '#E01E5A',
            channel: 'dev-alerts',  
            message: "Revive Project Build Status" +
            "\n Project Name: Revive" +
            "\n Job Name: ${env.JOB_NAME}" +
            "\n Build number: ${currentBuild.displayName}" +
            "\n Build Status : FAILED" +
            "\n Build User : Sahar" +
            "\n Action : Please check the console output to fix this job IMMEDIATELY" +
            "\n Build url : ${env.BUILD_URL}"
        }
        unstable {
            slackSend color: '#ECB22E',
            channel: 'dev-alerts', 
            message: "Revive Project Build Status" +
            "\n Project Name: Revive" +
            "\n Job Name: ${env.JOB_NAME}" +
            "\n Build number: ${currentBuild.displayName}" +
            "\n Build Status : UNSTABLE" +
            "\n Action : Please check the console output to fix this job IMMEDIATELY" +
            "\n Build url : ${env.BUILD_URL}"
        }   
    }
       
}

